{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Enigma",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "-g",
          "${workspaceFolder}/src/main.cpp",
          "${workspaceFolder}/src/Rotor.cpp",
          "${workspaceFolder}/src/Reflector.cpp",
          "${workspaceFolder}/src/Plugboard.cpp",
          "${workspaceFolder}/src/EnigmaMachine.cpp",
          "-o",
          "${workspaceFolder}/build/enigma.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
  }
  